{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Keyboarder",
  "version": "0.1.7",
  "identifier": "com.example.keyboarder",
  "build": {
    "beforeBuildCommand": "vite build",
    "beforeDevCommand": "vite dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "windows": [
      {
        "title": "Keyboarder",
        "width": 1200,
        "height": 820
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb",
      "rpm",
      "nsis",
      "msi"
    ],
    "publisher": "JWebCoder",
    "homepage": "https://github.com/JWebCoder/keyboarder",
    "category": "Productivity",
    "shortDescription": "Design and print key labels for macro pads and keyboards.",
    "longDescription": "Keyboarder is a local-first app to design printable key label layouts.\nCreate keys in millimeters, add text, icons, and shapes, and export to scale-accurate PDF or SVG.\nIncludes layout templates, snap-to-grid editing, multi-select, and a cut-sheet view for easier trimming.",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "dialog": null
  }
}
